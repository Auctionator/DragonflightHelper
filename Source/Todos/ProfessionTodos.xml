<Ui xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Frame name="DFH_ProfessionTodoItemFrame" inherits="DragonflightHelperStatusBarFrame" mixin="DFH_ProfessionStatusBar" virtual="true">
    <Scripts>
      <OnEvent method="OnEvent" />
      <OnShow method="OnShow" />
      <OnHide method="OnHide" />
      <OnEnter method="OnEnter" />
      <OnLeave method="OnLeave" />
    </Scripts>
  </Frame>

  <Frame name="DFH_ProfessionContainerFrame" mixin="DFH_ProfessionContainerMixin" virtual="true">
    <!-- Max height = title height + 5 line items w/ offset = (25 + 5 * (15 + 2) ) -->
    <!-- Min height = title height + 3 line items w/ offset = (25 + 3 * (15 + 2) ) -->
    <Size y="126" />

    <Scripts>
      <OnLoad method="OnLoad" />
      <OnEvent method="OnEvent" />
      <OnShow method="OnShow" />
      <OnHide method="OnHide" />
    </Scripts>

    <Anchors>
      <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" />
    </Anchors>

    <Frames>
      <Frame parentKey="Title" inherits="DragonflightHelperSectionTitleFrame">
      </Frame>

      <Frame parentKey="Treatise" inherits="DFH_ProfessionTodoItemFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" />
        </Anchors>
        <KeyValues>
          <KeyValue key="questTypeKey" value="Treatise" type="string" />
        </KeyValues>
      </Frame>
      <Frame parentKey="Gathering" inherits="DFH_ProfessionTodoItemFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Treatise" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>
        <KeyValues>
          <KeyValue key="questTypeKey" value="Gathering" type="string" />
        </KeyValues>
      </Frame>
      <Frame parentKey="WeeklyDrops" inherits="DFH_ProfessionTodoItemFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Gathering" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>
        <KeyValues>
          <KeyValue key="questTypeKey" value="WeeklyDrops" type="string" />
        </KeyValues>
      </Frame>
      <Frame parentKey="ServicesRequested" inherits="DFH_ProfessionTodoItemFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.WeeklyDrops" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>
        <KeyValues>
          <KeyValue key="questTypeKey" value="ValdrakkenServicesAzley" type="string" />
        </KeyValues>
      </Frame>
      <Frame parentKey="Trainer" inherits="DFH_ProfessionTodoItemFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ServicesRequested" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>
        <KeyValues>
          <KeyValue key="questTypeKey" value="ValdrakkenTrainers" type="string" />
        </KeyValues>
      </Frame>
      <Frame parentKey="Valdrakken" inherits="DFH_ProfessionTodoItemFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Trainer" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>
        <KeyValues>
          <KeyValue key="questTypeKey" value="Valdrakken" type="string" />
        </KeyValues>
      </Frame>
    </Frames>
  </Frame>

  <Frame name="DFH_ProfessionTodosFrame" virtual="true">
    <!-- 75 accounts for the three title frames -->
    <Size y="25" />

    <Frames>
      <Frame parentKey="Title" inherits="DragonflightHelperSectionTitleFrame">
        <KeyValues>
          <KeyValue key="title" value="Profession Todos" type="string" />
        </KeyValues>
      </Frame>

      <Frame parentKey="ProfessionSlot1" inherits="DFH_ProfessionContainerFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" y="6" />
        </Anchors>

        <KeyValues>
          <KeyValue key="professionIndex" value="1" type="number" />
        </KeyValues>
      </Frame>

      <Frame parentKey="ProfessionSlot2" inherits="DFH_ProfessionContainerFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ProfessionSlot1" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>

        <KeyValues>
          <KeyValue key="professionIndex" value="2" type="number" />
        </KeyValues>
      </Frame>

    </Frames>
  </Frame>
</Ui>