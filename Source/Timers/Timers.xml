<Ui xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Frame name="DFH_TimersFrame" virtual="true">
    <!-- Section Title = 25, StatusBar = 15 (each with an offset of 2) => 25 + (2 * (15 + 2)) -->
    <Size y="59" />

    <Frames>
      <Frame parentKey="Title" inherits="DFH_SectionTitleFrame">
        <KeyValues>
          <KeyValue key="title" value="Timers" type="string" />
        </KeyValues>
      </Frame>
      <Frame parentKey="FeastTimer" inherits="DFH_StatusBarFrame" mixin="DFH_FeastTimerMixin">
        <KeyValues>
          <KeyValue key="title" value="Feast Timer" type="string" />
          <KeyValue key="frequency" value="1.5" type="number" />
          <KeyValue key="startTime" value="1" type="number" />
          <KeyValue key="endTime" value="24" type="number" />
          <KeyValue key="duration" value="15" type="number" />
          <KeyValue key="colorIndex" value="3" type="number" />
          <KeyValue key="activeThreshold" value="15" type="number" />
          <KeyValue key="tt_x" value="13.57" type="number" />
          <KeyValue key="tt_y" value="48.58" type="number" />
          <KeyValue key="tt_map" value="2024" type="number" />
          <KeyValue key="tt_title" value="Feast" type="string" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>
      </Frame>
      <Frame parentKey="SiegeTimer" inherits="DFH_StatusBarFrame" mixin="DFH_SiegeTimerMixin">
        <KeyValues>
          <KeyValue key="title" value="Siege Timer" type="string" />
          <KeyValue key="startTime" value="0" type="number" />
          <KeyValue key="endTime" value="23" type="number" />
          <KeyValue key="frequency" value="2" type="number" />
          <KeyValue key="colorIndex" value="4" type="number" />
          <KeyValue key="activeThreshold" value="15" type="number" />
          <KeyValue key="tt_x" value="30.51" type="number" />
          <KeyValue key="tt_y" value="77.91" type="number" />
          <KeyValue key="tt_map" value="2022" type="number" />
          <KeyValue key="tt_title" value="Siege starting area" type="string" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.FeastTimer" relativePoint="BOTTOMLEFT" y="-2" />
        </Anchors>
      </Frame>
    </Frames>
  </Frame>
</Ui>