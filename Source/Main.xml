<Ui xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

  <Frame name="DragonflightHelperFrame" mixin="DFH_Mixin" setAllPoints="true" movable="true" enableMouse="true" useParentLevel="true" parent="UIParent">
    <Size x="200" y="677" />

    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>

    <Layers>
      <Layer level="ARTWORK">
        <FontString parentKey="Title" inherits="GameFontHighlightMedium" justifyH="CENTER" text="Dragonflight Helper">
          <Size y="25" />
          <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" />
            <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Button mixin="DFH_ButtonMixin" enableMouse="true">
        <Size x="25" y="25" />
        <Anchors>
          <Anchor point="TOPLEFT" x="4" />
        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <Texture atlas="UI-Panel-HideButton-Up" useAtlasSize="false" parentKey="texture">
              <Size x="25" y="25" />
              <Anchors>
                <Anchor point="TOPLEFT" />
              </Anchors>
            </Texture>
          </Layer>
        </Layers>
        <Scripts>
          <OnClick method="OnClick" />
        </Scripts>
      </Button>
      <Button mixin="DFH_LockButtonMixin" enableMouse="true">
        <Size x="25" y="25" />
        <Anchors>
          <Anchor point="TOPLEFT" x="24" y="1" />
        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <Texture atlas="QuestSharing-Padlock" useAtlasSize="false" parentKey="texture">
              <Size x="25" y="25" />
              <Anchors>
                <Anchor point="TOPLEFT" />
              </Anchors>
            </Texture>
          </Layer>
        </Layers>
        <Scripts>
          <OnClick method="OnClick" />
          <OnEnter method="OnEnter" />
          <OnLeave method="OnLeave" />
        </Scripts>
      </Button>
      <Button mixin="DFH_ConfigButtonMixin" enableMouse="true">
        <Size x="25" y="25" />
        <Anchors>
          <Anchor point="TOPRIGHT" y="6" />

        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <Texture atlas="common-icon-rotateright" useAtlasSize="false" parentKey="texture">
              <Size x="15" y="15" />
              <Anchors>
                <Anchor point="TOPLEFT" y="-10" />
              </Anchors>
            </Texture>
          </Layer>
        </Layers>
        <Scripts>
          <OnClick method="OnClick" />
        </Scripts>
      </Button>
      <Frame parentKey="Reputations" inherits="DFH_ReputationsFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" x="5" />
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" />
        </Anchors>
      </Frame>
      <Frame parentKey="Timers" inherits="DFH_TimersFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Reputations" relativePoint="BOTTOMLEFT" />
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" />
        </Anchors>
      </Frame>
      <Frame parentKey="Todos" inherits="DFH_TodosFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Timers" relativePoint="BOTTOMLEFT" />
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" />
        </Anchors>
      </Frame>
      <Frame parentKey="ProfessionTodos" inherits="DFH_ProfessionTodosFrame">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Todos" relativePoint="BOTTOMLEFT" />
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" />
        </Anchors>
      </Frame>
    </Frames>

    <Scripts>
      <OnLoad method="OnLoad" />
      <OnShow method="OnShow" />
      <OnHide method="OnHide" />
      <OnMouseUp method="OnMouseUp" />
      <OnMouseDown method="OnMouseDown" />
      <OnDragStart method="OnDragStart" />
      <OnDragStop method="OnDragStop" />
    </Scripts>
  </Frame>
</Ui>